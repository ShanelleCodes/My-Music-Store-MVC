@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-4">
                <div class="col-6">  
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i>  Create New Category
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped" ">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                        <tr>
                            <td>@obj.Name</td>
                            <td>
                        @obj.DisplayOrder
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a href="@Url.Action("Edit", "Category", new { id = obj.Id })" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Category", new { id = obj.Id })" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
            }
                </tbody>

            </table>
        </div>
    </div>
</div>

