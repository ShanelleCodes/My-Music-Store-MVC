@model IEnumerable<Product>

<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="copy">
                    <div class="text-label">
                        <img src="~/images/myTunes.png" height="30px" />
                    </div>
                    <div class="text-hero-bold">
                        Music Store
                    </div>
                    <div class="text-hero-regular">
                        Immerse yourself in the rhythm of My Tunes – your one-stop shop for the 
                        latest hits and timeless classics. Dive in, explore our vast collection, 
                        and own the music that moves you!
                    </div>
                    <div class="cta">
                        <a href="#products" class="btn btn-primary">Explore Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/images/heroImg.png" alt="img" height="85%" />
            </div>
        </div>
        
    </div>
</section>

<div class="row pb-3" id="products">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="max-width: auto; height: 12rem;"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title text-dark opacity-100 text-uppercase text-center"> <strong>@product.SongName</strong></p>
                                <p class="card-title text-info text-center">by <b>@product.Artist</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark-emphasis opacity-100 text-center"><strong>@product.Price.ToString("c")</strong></p>
                            </div>
                        </div>
                        
                            <div class="row">
                                <div class="p-1">
                                    <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                        Details
                                    </a>
                                
                                </div>
                                
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>

    }

</div>
