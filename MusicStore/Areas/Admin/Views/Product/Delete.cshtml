@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            @* <div asp-validation-summary="ModelOnly"></div> *@
            <div class="form-floating py-2 col-12">
                <input asp-for="SongName" disabled class="form-control border-0 shadow" />
                <label asp-for="SongName" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Artist" disabled class="form-control border-0 shadow" />
                <label asp-for="Artist" class="ms-2"></label>
            </div>
            @* <div class="form-floating py-2 col-12">
                <input asp-for="Genre" disabled class="form-control border-0 shadow" />
                <label asp-for="Genre" class="ms-2"></label>
            </div> *@
            <div class="form-floating py-2 col-12">
                <input asp-for="Album" disabled class="form-control border-0 shadow" />
                <label asp-for="Album" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" disabled class="form-control border-0 shadow" />
                <label asp-for="Price" class="ms-2"></label>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary text-primary form-control">
                        Back to List
                    </a>

                </div>
            </div>



        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


